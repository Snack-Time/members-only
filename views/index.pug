extends layout

block content
  h1= title
  p Welcome to #{title}
  a(href='/sign-up') Sign up!!! 
  a(href='/log-in') Log In!!! 
  a(href='/log-out') Log Out!!!
  a(href='/update-user') Update!!!

  each message in messages 
    p #{message.content}
    if user
      if user.status = 'Member'
        p #{message.timestamp_formatted}
        p #{message.original_poster.username}

  if user 
    p Holy shit is that #{user.username}???
    p You are a #{user.status}
    a(href='/new-message') Post!!!